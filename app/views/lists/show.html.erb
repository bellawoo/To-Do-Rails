<h1><%= @list.name %></h1>

<p>Add a task</p>
<input type="text" data-list-id="<%= @list.id %>">

<ul class="task-list">
  <% @list.tasks.each do |task| %>
    <li>
      <span class="task <%= if task.completed? then 'complete' else '' end %>" data-task-id="<%= task.id %>">
      <%= task.content %>
      </span>
      <button class="delete" data-task-id="<%= task.id %>">Delete</button>
    </li>
  <% end %>
</ul>